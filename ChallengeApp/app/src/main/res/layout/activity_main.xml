<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/lol" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Online Shop ASUS Store"
            android:textColor="#000"
            android:textSize="10pt"
            android:textStyle="bold" />
    </LinearLayout>


    <Button
        android:id="@+id/bt_a407"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ASUS VivoBook A407MA" />

    <Button
        android:id="@+id/bt_g531gd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ASUS ROG Strix G531GD" />

    <Button
        android:id="@+id/bt_x200ca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ASUS X200CA" />

    <Button
        android:id="@+id/bt_x455la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ASUS X455LA" />

    <Button
        android:id="@+id/bt_gl553vd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ASUS ROG GL553VD" />

    <Button
        android:id="@+id/bt_gl504gm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ASUS ROG Strix Hero II Gl504GM" />

    <Button
        android:id="@+id/bt_a409"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ASUS VivoBook A409" />

</LinearLayout>