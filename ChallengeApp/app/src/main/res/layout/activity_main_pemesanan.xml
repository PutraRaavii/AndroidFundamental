<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pemesanan.MainPemesanan"
    android:background="@drawable/gray1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/iconmobil"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:textColor="#DFDFDF"
            android:textSize="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pemesanan Laptop ASUS"/>

    </LinearLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="=================================================="/>


        <RadioGroup
            android:id="@+id/rg_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_jne"
                android:textColor="#D5D1D1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JNE (Rp. 20.000)"/>
            <RadioButton
                android:id="@+id/rb_pos"
                android:textColor="#D5D1D1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pos Indonesia (Rp. 50.000)"/>
            <RadioButton
                android:id="@+id/rb_cepat"
                android:textColor="#D5D1D1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Si Cepat (Rp. 15.000)"/>
            <RadioButton
                android:id="@+id/rb_ninja"
                android:textColor="#D5D1D1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ninja Express (Rp. 25.000)"/>
            <RadioButton
                android:id="@+id/rb_TiKi"
                android:textColor="#D5D1D1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TiKi (Rp. 25.000)"/>
            <RadioButton
                android:id="@+id/rb_wahana"
                android:textColor="#D5D1D1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wahana Logistik (Rp. 30.000)"/>


        </RadioGroup>



        <Button
            android:id="@+id/bt_go"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"/>
        <Button
            android:id="@+id/bt_back"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"/>

    </LinearLayout>






</LinearLayout>